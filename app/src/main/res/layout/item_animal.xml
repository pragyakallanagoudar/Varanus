<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="false"
    android:orientation="vertical"
    android:padding="8dp">


    <ImageView
        android:id="@+id/animal_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/varanus" />


    <TextView
        android:id="@+id/animal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/animal_image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/animal_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="Varanus" />

    <TextView
        android:id="@+id/enclosure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animal_name"
        android:layout_alignLeft="@+id/animal_name"
        android:layout_marginBottom="10dp"
        android:text="Enclosure"
        tools:text="Enclosure" />

    <!--

    <ImageView
        android:id="@+id/animal_status"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/enclosure"
        android:layout_alignLeft="@+id/enclosure"
        tools:src="@drawable/ic_check" />
        -->
</RelativeLayout>