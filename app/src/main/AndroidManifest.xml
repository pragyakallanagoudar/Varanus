<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pragyakallanagoudar.varanus">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_varanus_logo2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_varanus_logo2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.GeneralActivity"></activity>
        <activity android:name=".activity.BalanceActivity" />
        <activity android:name=".activity.AnimalsActivity" />
